<script src="{{ 'SZHeader.js' | asset_url }}" defer="defer"></script>

{% if section.settings.sticky_header_type != 'none' %}
  <sz-header class="horizontal" style="--padding: none;" data-sticky-type="{{ section.settings.sticky_header_type }}">
{% endif %}
{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when '@app' -%}
      {% render block %}
    {%- when 'logo' -%}
      {% render 'logo' %}
    {%- when 'menu' -%}
      {% render 'header-menu', block: block %}
    {%- when 'cart' -%}
      {% render 'cart' %}
    {%- when 'account' -%}
      {% render 'account' %}
    {%- when 'link' -%}
      {% render 'sz-link' with block %}
  {%- endcase -%}
{%- endfor -%}
{% if section.settings.sticky_header_type != 'none' %} </sz-header> {% endif %}

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if settings.logo %}
      "logo": {{ settings.logo | image_url: width: 500 | prepend: "https:" | json }},
    {% endif %}
    "sameAs": [
      {{ settings.social_twitter_link | json }},
      {{ settings.social_facebook_link | json }},
      {{ settings.social_pinterest_link | json }},
      {{ settings.social_instagram_link | json }},
      {{ settings.social_tiktok_link | json }},
      {{ settings.social_tumblr_link | json }},
      {{ settings.social_snapchat_link | json }},
      {{ settings.social_youtube_link | json }},
      {{ settings.social_vimeo_link | json }}
    ],
    "url": {{ request.origin | append: page.url | json }}
  }
</script>

{%- if request.page_type == 'index' -%}
  {% assign potential_action_target = request.origin | append: routes.search_url | append: '?q={search_term_string}' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {{ potential_action_target | json }},
        "query-input": "required name=search_term_string"
      },
      "url": {{ request.origin | append: page.url | json }}
    }
  </script>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.header.name",
  "tag": "header",
  "class": "horizontal",
  "max_blocks": 5,
  "settings": [
    {
      "type": "select",
      "id": "sticky_header_type",
      "options": [
        {
          "value": "none",
          "label": "t:sections.header.settings.sticky_header_type.options__1.label"
        },
        {
          "value": "on-scroll-up",
          "label": "t:sections.header.settings.sticky_header_type.options__2.label"
        },
        {
          "value": "always",
          "label": "t:sections.header.settings.sticky_header_type.options__3.label"
        },
        {
          "value": "reduce-logo-size",
          "label": "t:sections.header.settings.sticky_header_type.options__4.label"
        }
      ],
      "default": "on-scroll-up",
      "label": "t:sections.header.settings.sticky_header_type.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "name": "Logo",
      "type": "logo"
    },
    {
      "name": "Menu",
      "type": "menu",
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "default": "main-menu",
          "label": "t:sections.header.settings.menu.label"
        }
      ]
    },
    {
      "name": "Cart",
      "type": "cart"
    },
    {
      "name": "Link",
      "type": "link",
      "settings": [
        {
          "type": "url",
          "id": "href",
          "label": "Url"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
